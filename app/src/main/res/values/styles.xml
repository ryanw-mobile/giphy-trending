<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_listitem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_standard</item>
        <item name="android:layout_marginTop">@dimen/margin_half</item>
        <item name="android:layout_marginEnd">@dimen/margin_standard</item>
        <item name="android:layout_marginBottom">@dimen/margin_half</item>
        <item name="android:background">@color/black_semitrans</item>
    </style>

    <style name="style_listitem_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="style_listitem_type" parent="TextAppearance.AppCompat.Caption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_half</item>
        <item name="android:layout_marginEnd">@dimen/margin_half</item>
        <item name="android:background">@color/md_theme_light_primaryInverse</item>
        <item name="android:padding">@dimen/margin_half</item>
        <item name="android:fontFamily">@font/bitter</item>
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
    </style>

    <style name="style_listitem_title" parent="TextAppearance.AppCompat.Body2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/md_theme_dark_onSurface</item>
        <item name="android:padding">@dimen/margin_standard</item>
        <item name="android:fontFamily">@font/bitter</item>
    </style>

    <style name="style_listitem_username" parent="TextAppearance.AppCompat.Caption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/bitter</item>
        <item name="android:background">@color/design_default_color_primary_dark</item>
        <item name="android:padding">@dimen/margin_half</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="style_listitem_imagebutton">
        <item name="android:layout_width">@dimen/image_button_size</item>
        <item name="android:layout_height">@dimen/image_button_size</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">@dimen/margin_standard</item>
        <item name="tint">@color/md_theme_dark_onSurface</item>
    </style>
</resources>