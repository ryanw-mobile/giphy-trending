<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_listitem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_standard</item>
        <item name="android:layout_marginTop">@dimen/margin_half</item>
        <item name="android:layout_marginEnd">@dimen/margin_standard</item>
        <item name="android:layout_marginBottom">@dimen/margin_half</item>
    </style>

    <style name="style_listitem_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="style_listitem_type" parent="TextAppearance.AppCompat.Caption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_half</item>
        <item name="android:layout_marginBottom">@dimen/margin_half</item>
        <item name="android:background">@color/listitem_image_type_background</item>
        <item name="android:paddingStart">@dimen/margin_standard</item>
        <item name="android:paddingEnd">@dimen/margin_standard</item>
        <item name="android:paddingTop">@dimen/margin_half</item>
        <item name="android:paddingBottom">@dimen/margin_half</item>
        <item name="android:fontFamily">@font/bitter</item>
        <item name="android:textColor">@color/listitem_image_type_textcolor</item>
    </style>

    <style name="style_listitem_username" parent="TextAppearance.AppCompat.Caption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/bitter</item>
        <item name="android:layout_marginTop">@dimen/margin_half</item>
        <item name="android:layout_marginBottom">@dimen/margin_half</item>
        <item name="android:background">@color/listitem_username_background</item>
        <item name="android:paddingStart">@dimen/margin_standard</item>
        <item name="android:paddingEnd">@dimen/margin_standard</item>
        <item name="android:paddingTop">@dimen/margin_half</item>
        <item name="android:paddingBottom">@dimen/margin_half</item>
        <item name="android:textColor">@color/listitem_username_textcolor</item>
    </style>

    <style name="style_listitem_title" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/margin_standard</item>
        <item name="android:paddingBottom">@dimen/margin_standard</item>
        <item name="android:fontFamily">@font/bitter_bold</item>
        <item name="android:textColor">@color/listitem_image_type_textcolor</item>
    </style>

    <style name="style_listitem_imagebutton">
        <item name="android:layout_width">@dimen/image_button_size</item>
        <item name="android:layout_height">@dimen/image_button_size</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">12dp</item>
        <item name="android:alpha">0.68</item>
        <item name="android:tint">@color/listitem_image_type_textcolor</item>
    </style>
</resources>