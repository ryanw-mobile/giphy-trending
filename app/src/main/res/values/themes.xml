<resources>
    <!-- Base application theme. -->
    <style name="Theme.GiphyTrending" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- Splash Screen -->
    <style name="Theme.GiphyTrending.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/windowSplashScreenBackground</item>

        // Either a drawable or an animated drawable. One of these is required.
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>

        // Link your original theme here
        <item name="postSplashScreenTheme">@style/Theme.GiphyTrending</item>
    </style>

</resources>
